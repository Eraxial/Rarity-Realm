<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/assets/icon2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/oneItem.css">
  </head>
  <body>
    <header>
      <%- include('../includes/navbar.ejs') %>
    </header>
    <main class="container-xxl">
      <div class="row">
        <div class="col-12 text-center py-5">
          <button class="fs-4 mb-4 mb-xl-0 me-xl-4">Explore <%= result.category_name %></button>
          <button class="fs-4" onclick="window.location.href='/collections/<%= result.collection_id %>'">Explore <%= result.collection_name %></button>
        </div>
        <div class="col-xl-6 pe-xl-0 text-center">
          <img class="rounded-start-xl-5" src="/images/items/<%= result.item_img %>" alt="">
        </div>
        <div class="col-xl-6 ps-xl-0 ">
          <article class="h-100 rounded-end-xl-5 info d-flex align-items-center">
            <table class="mx-5">
              <tr>
                <th>
                  Name:
                </th>
                <td>
                  <%= result.item_name %>
                </td>
              </tr>
              <tr>
                <th>
                  Purchase Year:
                </th>
                <td>
                  <%= result.item_purchaseyear %>
                </td>
              </tr>
              <tr>
                <th>
                  Collection:
                </th>
                <td>
                  <%= result.collection_name %>
                </td>
              </tr>
              <tr>
                <th>
                  Category:
                </th>
                <td>
                  <%= result.category_name %>
                </td>
              </tr>
              <tr>
                <th>
                  Description:
                </th>
                <td>
                  <%= result.item_description %>
                </td>
              </tr>
            </table>
          </article>
