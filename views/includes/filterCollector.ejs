<section class="container-xxl d-flex flex-column align-items-center filter">
  <p class="fs-4 fw-bold">Filter by:</p>
  <form class="w-100 pb-5 d-flex flex-column align-items-center" action="/admin/filter/collector" method="post">
    <div class="row row-gap-4">
      <div class="col-md-6 col-xl-3">
        <input type="radio" name="options" id="collector1" value="nick" hidden>
        <label class="mx-auto" for="collector1">
          Nick
        </label>
      </div>
      <div class="col-md-6 col-xl-3">
        <input type="radio" name="options" id="collector2" value="name" hidden>
      <label class="mx-auto" for="collector2">
        Name
      </label>
      </div>
      <div class="col-md-6 col-xl-3">
        <input type="radio" name="options" id="collector3" value="last_name" hidden>
        <label class="mx-auto" for="collector3">
          Last Name
        </label>
      </div>
      <div class="col-md-6 col-xl-3">
        <input type="radio" name="options" id="collector4" value="collector_id" hidden>
        <label class="mx-auto" for="collector4">
          Id
        </label>
      </div>
      <input type="search" name="filter" autofocus>
    </div>

    <div class="row row-gap-4 text-center">
      <div class="col-md-4">
        <button class="fs-6">Accept</button>

      </div>
      <div class="col-md-4">
        <button class="fs-6" type="reset">Clean</button>
        
      </div>
      <div class="col-md-4">
        <button class="fs-6" type="button" onclick="window.location.href='/admin'">Reset</button>

      </div>
    </div>
  </form>

</section>