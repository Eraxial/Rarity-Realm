<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/assets/icon2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/general.css">
  </head>
  <body>
    <header>
      <%- include('./includes/navbar.ejs') %>
    </header>
    
    <main>
      <section class="container-fluid head my-5">
        <h1 class="py-5 text-center">Collections</h1>
      </section>

      <section class="container-xxl">
        <div class="row row-gap-5">
          <% collections.forEach(collection => { %>

            <div class="col-md-6 col-xl-3">
              <div class="card border-0 mx-auto" style="width: 18rem;">
                <div class="card-head ratio ratio-16x9">
                  <img class="object-fit-cover rounded-top-4" src="/images/items/<%= collection.item_img %>" class="card-img-top" alt="Imagen de la colecciÃ³n">
                </div>
                <div class="card-body text-center">
                  <h5 class="card-title text-start"><%= collection.collection_name %></h5>
                  <h6 class="card-subtitle text-start">Collector: <%= collection.collector_nick %></h6>
                  <p class="card-text text-start"><%= collection.collection_description %></p>
                  <button class="fs-5" onclick="window.location.href='/collections/<%= collection.collection_id %>'">View</button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>