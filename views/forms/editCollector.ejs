<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/assets/icon2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/forms.css">
  </head>
  <body>

    <header>
      <%- include('../includes/navbar.ejs') %>
    </header>

    <main>
      <div class="container-xxl">
        <h1 class="text-center">Edit collector</h1>
        <div class="row">
          <div class="col-xl-6 photo text-center text-xl-end">
            <img src="/images/collectors/<%= result.collector_img %>" alt="">
          </div>
          <div class="col-xl-6">
            <form class="mx-auto ms-xl-0 d-flex flex-column gap-4" action="/admin/editCollector/<%= result.collector_id %>" method="post">
              <label class="d-flex flex-column">
                Nick
                <input type="text" name="nick" value="<%= result.nick %>">
              </label>
              <label class="d-flex flex-column">
                email
                <input type="text" name="email" value="<%= result.email %>">
              </label>
              <label class="d-flex flex-column">
                Name
                <input type="text" name="name" value="<%= result.name %>">
              </label>
              <label class="d-flex flex-column">
                Last Name
                <input type="text" name="last_name" value="<%= result.last_name %>">
              </label>
              <label class="d-flex flex-column">
                Phone
                <input type="text" name="phone" value="<%= result.phone %>">
              </label>
              <div class="d-flex gap-3">
                <button>Aceptar</button>
                <button type="button" onclick="window.location.href='/admin/'">Cancelar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>