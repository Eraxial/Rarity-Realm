<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/assets/icon2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%- include('../includes/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/collectorInfo.css">

  </head>
  <body>
    <header>
      <%- include('../includes/navbar.ejs') %>
    </header>
    
    <main>
      <section class="py-5 info">
        <article class="py-5 text-center text-light">
          <h1>Collector's Info</h1>
          <h2><%= finalResult.nick %></h2>
        </article>
        <div class="container-xxl pt-5">
          <div class="row">
            <div class="col-xl-6 text-center">
              <img class="p-4 photo" src="/images/collectors/<%= finalResult.collector_img %>" alt="">
            </div>
            <div class="col-xl-6 my-auto">
            
              <table class="mx-auto ms-xl-0">
                <tr>
                  <th>Name:</th>
                  <td><%= finalResult.name %></td>
                </tr>
                <tr>
                  <th>Last Name:</th>
                  <td><%= finalResult.last_name %></td>
                </tr>
                <tr>
                  <th>Email:</th>
                  <td><%= finalResult.email %></td>
                </tr>
                <tr>
                  <th>Principal interest:</th>
                  <td><%= finalResult.interest %></td>
                </tr>
                <tr>
                  <th>Phone number:</th>
                  <td><%= finalResult.phone %></td>
                </tr>
                <tr>
                  <td><button onclick="window.location.href='/collectors/<%= finalResult.collector_id %>/editCollector'">Edit Info</button></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        
      </section>
      
      
      
      <section class="items container-xxl py-3 p-xl-5">

        <h3 class="text-center text-light pb-5"><%= finalResult.nick %>'s Items</h3>
        <figure class="text-center button pb-5">
          <hr>
          <button onclick="window.location.href='/collectors/<%= finalResult.collector_id %>/addItem'">Add item</button>
        </figure>
        <% finalResult.items.forEach(item => { %>
          
          <div class="row m-3 list">
            <div class="col-xl-3 text-center text-xl-start p-3">
              <a href="/items/<%= item.item_id %>">
                <img src="/images/items/<%= item.item_img %>" alt="">
              </a>
            </div>
            <div class="col-xl-9 my-auto p-3">
              <div class="row">
                <div class="col-6 col-lg-12 item">
                  <div class="row">
                    <div class="col-lg-3">
                      <p class="fw-bold">Name:</p>
                    </div>
                    <div class="col-lg-3">
                      <p class="fw-bold mb-lg-0">Year of Purchase:</p>
                    </div>
                    <div class="col-lg-3">
                      <p class="fw-bold">Collection:</p>
                    </div>
                    <div class="col-lg-3">
                      <p class="fw-bold">Category:</p>
                    </div>
                  </div>
                </div>
                <div class="col-6 col-lg-12">
                  <div class="row">
                    <div class="col-lg-3">
                      <p><%= item.item_name %></p>
                    </div>
                    <div class="col-lg-3">
                      <p><%= item.item_purchaseyear %></p>
                    </div>
                    <div class="col-lg-3">
                      <p><%= item.collection_name %></p>
                    </div>
                    <div class="col-lg-3">
                      <p><%= item.category_name %></p>
                    </div>
                  </div>
                </div>
              </div>
              <p class="pt-4"><%= item.item_description %></p>
            </div>
            <div class="pb-3">
              <button onclick="window.location.href='/collectors/<%= finalResult.collector_id %>/editItem/<%= item.item_id %>'">Edit</button>
              <button onclick="window.location.href='/collectors/<%= finalResult.collector_id %>/eraseItem/<%= item.item_id %>'">Erase</button>
            </div>
          </div>
          <% }) %>
      </section>
    </main>

    <%- include('../includes/footer.ejs') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>