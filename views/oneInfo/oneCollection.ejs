<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/assets/icon2.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%- include('../includes/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link rel="stylesheet" href="/stylesheets/oneCollection.css">
  </head>
  <body>

    <header>
      <%- include('../includes/navbar.ejs') %>
    </header>

    <main>

      <section class="text-center head container-fluid mt-5 mb-4">
        <h1 class="py-5"><%= finalResult.collection_name %></h1>
      </section>

      <section class="info text-center" >
        <img class="rounded-circle p-4" src="/images/collectors/<%= finalResult.collector_img%>" alt="">
        <article class="mx-auto py-4">
          <h2>Collection of: <button onclick="window.location.href='/collectors/<%= finalResult.collector_id %>'"><%= finalResult.collector_nick %></button></h2>
          <p class="fs-6"><span class="fw-bold">Collection:</span> <%= finalResult.collection_name %> </p>
          <p class="fs-6"><span class="fw-bold">Description:</span> <%= finalResult.collection_description %></p>
        </article>
      </section>

      <h2 class="text-center head py-5">Items of the collection: </h2>
      
      <section class="items container-xxl mt-4 py-3 p-xl-3">
        <% finalResult.items.forEach(item => { %>
          
          <div class="row m-3 list">
            <div class="col-xl-3 text-center text-xl-start p-3">
              <a href="/items/<%= item.item_id %>">
                <img src="/images/items/<%= item.item_img %>" alt="">
              </a>
              </div>
              <div class="col-xl-8 my-auto p-3">
                <div class="row">
                  <div class="col-6 col-lg-12 item">
                    <div class="row">
                      <div class="col-lg-3">
                        <p class="fw-bold">Name:</p>
                      </div>
                      <div class="col-lg-3">
                        <p class="fw-bold mb-lg-0">Year of Purchase:</p>
                      </div>
                      <div class="col-lg-3">
                        <p class="fw-bold">Collection:</p>
                      </div>
                      <div class="col-lg-3">
                        <p class="fw-bold">Category:</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-6 col-lg-12">
                    <div class="row">
                      <div class="col-lg-3">
                        <p><%= item.item_name %></p>
                      </div>
                      <div class="col-lg-3">
                        <p><%= item.item_purchaseyear %></p>
                      </div>
                      <div class="col-lg-3">
                        <p><%= item.collection_name %></p>
                      </div>
                      <div class="col-lg-3">
                        <p><%= item.category_name %></p>
                      </div>
                    </div>
                  </div>
                </div>
                <p class="pt-4"><%= item.item_description %></p>
              </div>
            </div>
          <% }) %>
      </section>
      <%- include('../includes/footer.ejs') %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>